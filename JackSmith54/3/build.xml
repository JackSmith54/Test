<?xml version="1.0"?>
<project name="Tokeniser" basedir="." default="compile">
    <property name="src" value="."/>
    <property name="output" value="."/>
	 
    <target name="compile" >
        <javac destdir="${output}" includeantruntime="false"> 
            <src path="${src}"/>
            <classpath path=".:./junit-4.11.jar"/>
        </javac>
    </target>
    
    <target name="clean">
        <delete>
            <fileset dir="${output}">
                <include name="*.class"/> 
            </fileset>
        </delete>
    </target>
</project>
